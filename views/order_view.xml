<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="delivery_orders_action" model="ir.actions.act_window">
			<field name="name">Orders</field>
			<field name="res_model">delivery.order</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="seq_order_id" model="ir.sequence"> 
            <field name="name">Autoincrement order ID</field> 
            <field name="code">delivery.order_id</field> 
            <field name="prefix">ORD</field> 
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

		<record id="order_view_form" model="ir.ui.view">
			<field name="name">Delivery Order</field>
			<field name="model">delivery.order</field>
			<field name="arch" type="xml">
				<form string="Delivery Order">
					<group>
						<field name="name" />
						<field name="customer_id" />
						<field name="carrier_id" />
						<field name="date" />
						<field name="status" />
						<field name="amount" />
					</group>
				</form>
			</field>
		</record>

		<record id="order_view_tree" model="ir.ui.view">
			<field name="name">Delivery Order Tree</field>
			<field name="model">delivery.order</field>
			<field name="arch" type="xml">
				<tree string="Delivery Order">
					<field name="order_id" />
					<field name="name" />
					<field name="customer_id" />
					<field name="carrier_id" />
					<field name="date" />
					<field name="status" />
					<field name="amount" />
				</tree>
			</field>
		</record>
	</data>
</odoo>